@{
    ViewData["Title"] = "Privacy by Chuck";
}
<h1>@ViewData["Title"]</h1>

<p>Wisdom from Chuck is from the api at https://api.chucknorris.io</p>

<h1 class="jumbotron font-weight-bold" style="background-color:salmon;" id="joke"></h1>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $.ajax({
            type: 'GET',
            url: 'https://api.chucknorris.io/jokes/random',
            dataType: 'json',
            success: function (msg) {
                $('#joke').html(msg.value);

            },
            error: function (request, status, error) {
                $('#joke').html("Error getting joke");
            }
        });
    });
</script>
