@using Microsoft.Extensions.Configuration
@inject IConfiguration Config

@{
    ViewData["Title"] = "Wisdom";
}

<div class="text-center">
    <h1 class="display-4">Dad says...</h1>
    <p>Dad's wisdom brought to you by https://icanhazdadjoke.com</a>.</p>
</div>

<h2 class="jumbotron font-weight-bold" style="background-color:@Config["FavoriteColor"]" id="joke"></h2>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $.ajax({
            type: 'GET',
            url: 'https://icanhazdadjoke.com',
            dataType: 'json',
            success: function (msg) {
                $('#joke').html(msg.joke);

            },
            error: function (request, status, error) {
                $('#joke').html("Error getting joke");
            }
        });
    });
</script>